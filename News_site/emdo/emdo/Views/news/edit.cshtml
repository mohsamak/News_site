@model news
@{
    ViewBag.Title = "edit";
}

<h2>edit</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>edit</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="row" style="margin:auto;">
        <div class="col-8 " style="margin:auto;">
            <form method="post">
                @*<input type="hidden" name="id" value="@Model.Id" />*@
                @Html.HiddenFor(n => n.user_id)
                <div class="form-group">
                    @Html.LabelFor(n => n.title)
                    @Html.TextBoxFor(n => n.title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.title, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(n => n.bref)
                    @Html.TextAreaFor(n => n.bref, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.bref, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(n => n.desc)
                    @Html.TextAreaFor(n => n.desc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.desc, "", new { @class = "text-danger" })
                </div>

                
                <input type="submit" value="save" />

            </form>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>



