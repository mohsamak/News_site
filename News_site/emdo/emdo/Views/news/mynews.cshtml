@model List<news>
@{
    ViewBag.Title = "mynews";
}

<h2>mynews</h2>
@foreach (var item in Model)
{
    <div style="text-align :center; font-size:22px; color:#7114ce ; font-weight:bold;">
        @item.title;

    </div>
    <div>
        <table width="100%">
            <tr>
                <td width="70%" style="font-size:18px;">@item.bref</td>
                <td width="30%"><img src="@item.photo " width="200" height="200" /></td>
            </tr>
            <tr>
                <td width="70%" style="font-size:10px; color:#36d0d0">catalog: @item.catalog.name    data:@item.date </td>
                <td width="30%">

                 @Html.ActionLink("Edit", "edit", new { id = item.id }) |
                 @Html.ActionLink("Delete", "delete", new { id = item.id }) |
                 @Html.ActionLink("Read more...", "details", new { id = item.id })
                </td>
            </tr>
        </table>
    </div>

}
